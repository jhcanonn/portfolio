---
import RootLayout from '@layouts/RootLayout.astro';
import About from '@components/astro/About.astro';
import Hero from '@components/astro/Hero.astro';
import Skills from '@components/astro/Skills.astro';
import ScrollReference from '@components/astro/ScrollReference.astro';
import Certifications from '@components/astro/Certifications.astro';
import { ProgressBar, Experience } from '@components/react';

const description = "This is Jair's Portfolio";
---

<RootLayout title="Portfolio" description={description}>
  <ProgressBar client:load />
  <ScrollReference referenceId="hero" />
  <Hero />
  <ScrollReference referenceId="about" />
  <About />
  <ScrollReference referenceId="experience" />
  <Experience client:visible />
  <ScrollReference referenceId="skills" />
  <Skills />
  <ScrollReference referenceId="certifications" />
  <Certifications />
</RootLayout>
